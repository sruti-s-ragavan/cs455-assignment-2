{
  "type":"module",
  "dependencies": {
    "jasmine": "^5.3.0",
    "live-server": "^1.2.0"
  },
  "devDependencies": {
    "c8": "^10.1.2"
  },
  "scripts": {
    "start": "live-server", 
    "test": "jasmine", 
    "coverage": "c8 --check-coverage --all npm test"
  }, 
  "c8":{
    "reporter": ["html", "text"],
    "reporterOptions": {
      "outputDir": "coverage"
    }, 
    "lines": 100,
    "branches": 100,
    "statements": 100, 
    "functions": 100, 
    "src": ["src/js"]
  }
}
